<%= simple_form_for @employer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.error_span(:name) %>
  <%= f.input :lastname %>
  <%= f.error_span(:lastname) %>
  <%= f.input :birth %>
  <%= f.error_span(:birth) %>
  <%= f.input :email %>
  <%= f.error_span(:email) %>
  <%= f.input :phone %>
  <%= f.error_span(:phone) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employers_path, :class => 'btn btn-default' %>
<% end %>

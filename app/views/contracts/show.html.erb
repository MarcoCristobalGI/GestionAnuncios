<%- model_class = Contract -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:jobadvert_id) %>:</strong></dt>
  <dd><%= @contract.jobadvert_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:worker_id) %>:</strong></dt>
  <dd><%= @contract.worker_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:begin) %>:</strong></dt>
  <dd><%= @contract.begin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
  <dd><%= @contract.end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripction) %>:</strong></dt>
  <dd><%= @contract.descripction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salary) %>:</strong></dt>
  <dd><%= @contract.salary %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              contracts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contract_path(@contract), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contract_path(@contract),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

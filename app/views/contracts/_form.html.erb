<%= simple_form_for @contract, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :jobadvert %>
  <%= f.error_span(:jobadvert_id) %>
  <%= f.association :worker %>
  <%= f.error_span(:worker_id) %>
  <%= f.input :begin %>
  <%= f.error_span(:begin) %>
  <%= f.input :end %>
  <%= f.error_span(:end) %>
  <%= f.input :descripction %>
  <%= f.error_span(:descripction) %>
  <%= f.input :salary %>
  <%= f.error_span(:salary) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contracts_path, :class => 'btn btn-default' %>
<% end %>

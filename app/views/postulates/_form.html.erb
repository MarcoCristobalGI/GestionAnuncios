<%= simple_form_for @postulate, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :jobadvert %>
  <%= f.error_span(:jobadvert_id) %>
  <%= f.association :worker %>
  <%= f.error_span(:worker_id) %>
  <%= f.input :description %>
  <%= f.error_span(:description) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                postulates_path, :class => 'btn btn-default' %>
<% end %>

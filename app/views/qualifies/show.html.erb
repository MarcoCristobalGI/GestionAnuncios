<%- model_class = Qualify -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:worker_id) %>:</strong></dt>
  <dd><%= @qualify.worker_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_id) %>:</strong></dt>
  <dd><%= @qualify.score_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @qualify.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              qualifies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_qualify_path(@qualify), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              qualify_path(@qualify),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

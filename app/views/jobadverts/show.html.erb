<%- model_class = Jobadvert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @jobadvert.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @jobadvert.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vacancies) %>:</strong></dt>
  <dd><%= @jobadvert.vacancies %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employer_id) %>:</strong></dt>
  <dd><%= @jobadvert.employer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @jobadvert.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @jobadvert.city_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              jobadverts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_jobadvert_path(@jobadvert), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              jobadvert_path(@jobadvert),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%- model_class = Jobadvert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:vacancies) %></th>
      <th><%= model_class.human_attribute_name(:employer_id) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:city_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobadverts.each do |jobadvert| %>
      <tr>
        <td><%= link_to jobadvert.id, jobadvert_path(jobadvert) %></td>
        <td><%= jobadvert.title %></td>
        <td><%= jobadvert.description %></td>
        <td><%= jobadvert.vacancies %></td>
        <td><%= jobadvert.employer.name %></td>
        <td><%= jobadvert.category.name %></td>
        <td><%= jobadvert.city.name %></td>
        <td><%=l jobadvert.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_jobadvert_path(jobadvert), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      jobadvert_path(jobadvert),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_jobadvert_path,
            :class => 'btn btn-primary' %>

<%= simple_form_for @score, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= f.error_span(:description) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scores_path, :class => 'btn btn-default' %>
<% end %>
